<!DOCTYPE html>
<html>
<head>
  <title>DeviseDemo</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-default">
    <div id="user_navigation" class="container-fluid">
      <% if user_signed_in? %>
        <p align="right">Signed in as <%= current_user.email %>. NOT YOU?
          <%= link_to "Sign Out!", destroy_user_session_path, :method => :delete, class:"btn btn-danger" %></p>
        <% else %>
            <%= link_to "Sign up now!", new_user_registration_path, class:"btn btn-primary" %> Or
            <%= link_to "Sign in", new_user_session_path, class: "btn btn-success" %>
        <% end %>
    </div>
</nav>

<% flash.each do |name, msg| %>
    <%= content_tag :div, msg, :id => "flash_#{name}" %>
<% end %>

<div id="stuff">
<%= yield %>
</div>


</body>
</html>
